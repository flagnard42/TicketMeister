@model IEnumerable<TicketMeisterIII.Models.Ticket>

@{
    ViewBag.Title = "Employee Index";
}

<h2>@ViewBag.Title</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.customerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.open)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.customerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.open)
            </td>
            <td>
                @Html.ActionLink("Respond", "Respond", new { id = item.ticketID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ticketID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ticketID })
            </td>
        </tr>
    }

</table>

